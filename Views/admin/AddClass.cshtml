@* AddClass.cshtml *@
<h2>Add Class</h2>
<form asp-action="AddClass" method="post">
    <input type="number" name="CourseId" placeholder="Course ID" class="form-control" required />
    <input type="text" name="RoomNumber" placeholder="Room" class="form-control" required />
    <input type="text" name="Building" placeholder="Building" class="form-control" required />
    <input type="number" name="Capacity" placeholder="Capacity" class="form-control" required />
    <input type="text" name="Term" placeholder="Term" class="form-control" required />
    <input type="number" name="Year" placeholder="Year" class="form-control" required />
    <button type="submit" class="btn btn-success">Add</button>
</form>