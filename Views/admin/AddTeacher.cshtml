@* AddTeacher.cshtml *@
<h2>Add Teacher</h2>
<form asp-action="AddTeacher" method="post">
    <!-- Similar fields to student -->
    <input type="text" name="FirstName" class="form-control" placeholder="First Name" required />
    <input type="text" name="LastName" class="form-control" placeholder="Last Name" required />
    <input type="email" name="Email" class="form-control" placeholder="Email" required />
    <input type="password" name="PasswordHash" class="form-control" placeholder="Password" required />
    <input type="number" name="Salary" class="form-control" placeholder="Salary" required />
    <button type="submit" class="btn btn-success">Add</button>
</form>