@* UnassignTeacherFromClass.cshtml *@
<h2>Unassign Teacher from Class</h2>
<form asp-action="UnassignTeacherFromClass" method="post">
    <div class="form-group">
        <label>Class</label>
        <select name="classId" class="form-control">
            @foreach (var c in ViewBag.Classes)
            {
                <option value="@c.ClassId">@c.Course.Title (@c.Term @c.Year)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Teacher</label>
        <select name="teacherId" class="form-control">
            @foreach (var t in ViewBag.Teachers)
            {
                <option value="@t.TeacherId">@t.FirstName @t.LastName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-danger">Unassign</button>
</form>

<hr />