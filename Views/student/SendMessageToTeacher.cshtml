
@* SendMessageToTeacher.cshtml *@
<h2>Send Message to Teacher</h2>
<form asp-action="SendMessageToTeacher" method="post">
    <div class="form-group">
        <label>Teacher</label>
        <select name="receiverId" class="form-control">
            @foreach (var t in ViewBag.Teachers)
            {
                <option value="@t.TeacherId">@t.FirstName @t.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea name="content" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

<hr />