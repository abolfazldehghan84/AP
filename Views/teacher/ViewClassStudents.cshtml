@* ViewClassStudents.cshtml *@
@model List<ClassStudent>
<h2>Class Students</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cs in Model)
        {
            <tr>
                <td>@cs.Student.FirstName @cs.Student.LastName</td>
                <td>@cs.Student.Email</td>
                <td>@(cs.Grade.HasValue ? cs.Grade.Value.ToString("0.00") : "-")</td>
                <td>
                    <form asp-action="RemoveStudentFromClass" method="post">
                        <input type="hidden" name="studentId" value="@cs.StudentId" />
                        <input type="hidden" name="classId" value="@cs.ClassId" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />